<h2>Recent Tweets</h2>
<% @tweets.each do |tweet| %>
	<p>
    <a href="http://www.twitter.com/<%= tweet.user.username %>"><img class="twittericon" src="<%= tweet.profile_image_url %>" align="left"></a><br><%= tweet.text %>
  </p><br>
<% end %>
